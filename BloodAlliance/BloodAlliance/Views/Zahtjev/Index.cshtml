@model IEnumerable<BloodAlliance.Models.Zahtjev>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Kreiraj zahtjev</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Datum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KrvnaGrupa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RhFaktor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NazivBolnice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Datum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KrvnaGrupa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RhFaktor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazivBolnice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ZahtjevId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ZahtjevId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ZahtjevId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
