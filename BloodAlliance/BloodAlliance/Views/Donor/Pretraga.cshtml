                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojTelefona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jmbg)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KrvnaGrupa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RhFaktor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojDarivanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TjelesnaTezina)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MjestoDarivanja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DatumPosljednjeDonacije)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hemoglobin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KrvniPritisak)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pol)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusDonora)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.DonorId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.DonorId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.DonorId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

