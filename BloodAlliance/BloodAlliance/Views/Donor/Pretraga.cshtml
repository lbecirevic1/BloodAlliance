            <th>
                @Html.DisplayNameFor(model => model.DatumPosljednjeDonacije)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Hemoglobin)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.KrvniPritisak)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Pol)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.StatusDonora)
            </th>
        </tr>
        <tr></tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prezime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
