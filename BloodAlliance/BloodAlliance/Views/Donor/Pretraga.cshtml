@model IEnumerable<BloodAlliance.Models.Donor>

@{
    ViewData["Title"] = "#SAVELIFEDONATEBLOOD";
}

<h2>#SAVELIFEDONATEBLOOD</h2>

<form asp-controller="Donor" asp-action="Pretraga">
    <p>
        Pretraga: <input type ="text" name="Upit"/>
        <input type="submit" value="Pretrazi"/>
    </p>

</form>

<table class="table">

    <thead>
        <tr>
