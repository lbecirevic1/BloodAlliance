                @Html.DisplayNameFor(model => model.Prezime)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.BrojTelefona)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.Jmbg)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.KrvnaGrupa)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.RhFaktor)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.BrojDarivanja)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.TjelesnaTezina)
            </th>
        
            <th>
                @Html.DisplayNameFor(model => model.MjestoDarivanja)
