@model IEnumerable<BloodAlliance.Models.ObavijestDonor>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Obavijest)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DatumObavijesti)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Donor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Obavijest)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumObavijesti)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Donor.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ObavijestDonorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ObavijestDonorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ObavijestDonorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
</body>
</html>
